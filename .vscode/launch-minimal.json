{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Minimal)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--new-window"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: compile",
      "stopOnEntry": false,
      "sourceMaps": true,
      "restart": true,
      "timeout": 20000
    }
  ]
} 